{
  "name": "typescript-translator",
  "private": true,
  "workspaces": [
    "apps/*",
    "infrastructure",
    "packages/**"
  ],
  "scripts": {
    "frontend:dev": "npm run dev --workspace=@sff/frontend",
    "frontend:build": "npm run build --workspace=@sff/frontend",
    "deploy": "cd infrastructure && cdk deploy -f --require-approval never",
    "destroy": "cd infrastructure && cdk destroy -f --require-approval never",
    "build-utils-lambda-layer": "npm run build --workspace=@sff/utils-lambda-layer",
    "watch-build-utils-lambda-layer": "npm run watch --workspace=@sff/utils-lambda-layer"
  }
}
